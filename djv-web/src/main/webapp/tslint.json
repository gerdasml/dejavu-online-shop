{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "max-line-length": [
            true,
            120
        ],
        "indent": [ true, "spaces", 4 ],
        "linebreak-style": [
            false
        ],
        "quotemark": [true, "double", "jsx-double", "avoid-escape"],
        "semicolon": [
            true,
            "always"
        ],
        "trailing-comma": [true, {
            "singleline": "never"
        }],
        "no-any": true,
        "ban-types": [
            true,
            [ "Object", "Use {} instead." ]
        ],
        "member-ordering": [ true, { "order": "fields-first" } ],
        "no-magic-numbers": true,
        "only-arrow-functions": true,
        "prefer-for-of": true,
        "prefer-const": true,
        "promise-function-async": true,
        "await-promise": true,
        "ban-comma-operator": true,
        "curly": [true, "ignore-same-line"],
        "forin": true,
        "no-conditional-assignment": true,
        "no-construct": true,
        "no-duplicate-super": true,
        "no-duplicate-imports": true,
        "no-duplicate-variable": true,
        "no-duplicate-switch-case": true,
        "no-empty": true,
        "no-eval": true,
        "no-implicit-dependencies": true,
        "no-invalid-this": true,
        "no-misused-new": true,
        "no-null-keyword": true,
        "no-object-literal-type-assertion": true,
        "no-shadowed-variable": true,
        "no-sparse-arrays": true,
        "no-string-literal": true,
        "no-switch-case-fall-through": true,
        "no-this-assignment": true,
        "no-unnecessary-class": true,
        "no-unused-expression": true,
        "no-unused-variable": true,
        "no-use-before-declare": true,
        "no-var-keyword": true,
        "prefer-conditional-expression": true,
        "prefer-object-spread": true,
        "radix": true,
        "restrict-plus-operands": true,
        "strict-boolean-expressions": true,
        "triple-equals": true,
        "use-isnan": true,
        "deprecation": true,
        "eofline": true,
        "max-classes-per-file": [true, 1],
        "max-file-line-count": [true, 300],
        "no-require-imports": false,
        "no-var-requires": false,
        "object-literal-sort-keys": true,
        "align": true,
        "array-type": [true, "array"],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "arrow-return-shorthand": [true, "multiline"],
        "class-name": true,
        "encoding": true,
        "import-spacing": true,
        "interface-name": true,
        "interface-over-type-literal": true,
        "newline-per-chained-call": true,
        "new-parens": true,
        "no-boolean-literal-compare": true,
        "no-consecutive-blank-lines": true,
        "no-trailing-whitespace": true,
        "no-unnecessary-callback-wrapper": true,
        "number-literal-format": true,
        "object-literal-key-quotes": [true, "as-needed"],
        "object-literal-shorthand": true,
        "ordered-imports": true,
        "prefer-function-over-method": true,
        "prefer-method-signature": true,
        "prefer-switch": [true, {"min-cases": 3}],
        "return-undefined": true,
        "space-before-function-paren": [true, "always"],
        "type-literal-delimiter": true,
        "variable-name": [true, "check-format", "allow-leading-underscore", "allow-trailing-underscore", "allow-pascal-case", "ban-keywords"], // PascalCase is allowed for stateless components
        "whitespace": true,
        "member-access": [true, "no-public"]
    },
    "rulesDirectory": []
}